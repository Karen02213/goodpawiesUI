# Environment Configuration for GoodPawies API

# Server Configuration
NODE_ENV=development
PORT=5000
CLIENT_URL=http://goodpawies.local

# Database Configuration
DB_HOST=localhost
DB_USER=goodpawiesuser
DB_PASSWORD=goodpawiespass
DB_NAME=goodpawiesdb

# JWT Configuration (CHANGE THESE IN PRODUCTION!)
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-long-and-complex
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-in-production-must-be-long-and-complex
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Encryption Configuration (CHANGE THIS IN PRODUCTION!)
ENCRYPTION_KEY=your-encryption-key-must-be-32-bytes-long-change-in-production

# Security Configuration
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Email Configuration (for future features)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Two-Factor Authentication (for future features)
TOTP_ISSUER=GoodPawies
TOTP_WINDOW=1

# Session Configuration
SESSION_TIMEOUT=86400000
REFRESH_TOKEN_ROTATION=true

# Development/Debug
DEBUG=false
ENABLE_REQUEST_LOGGING=true
